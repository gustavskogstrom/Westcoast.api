@model Westcoast.web.ViewModels.CourseDetailsViewModel
@{
    Layout = "_Layout";
}
<section class="page">
<h1>Mer info om klaser</h1>
<div class="table-container">
    
<table>
    <thead>
        <tr>
            <th></th>
            <th>Titel</th>
            <th>Startdatum</th>
            <th>Slutdatum</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td></td>
                <td>@Model.CourseTitle</td>
                <td>@Model.StartDate</td>
                <td>@Model.EndDate</td>
                <td>@Model.Description</td>
                <td></td>
            </tr>
    </tbody>
    <tfoot>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
    </tfoot>
</table>

<table>
    <thead>
        <tr>
            <th>Teacher</th>
            <th>Firstname</th>
            <th>LastName</th>
            <th>Email</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(@Model.Teacher is not null)
        {
            <tr>
                <td></td>
                <td>@Model.Teacher.FirstName</td>
                <td>@Model.Teacher.LastName</td>
                <td>@Model.Teacher.Email</td>
                <td></td>
                <td></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
    </tfoot>
</table>

<table>
    <thead>
        <tr>
            <th>Student</th>
            <th>Firstname</th>
            <th>LastName</th>
            <th>Email</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var Student in Model.Students)
        {
            <tr>
                <td></td>
                <td>@Student.FirstName</td>
                <td>@Student.LastName</td>
                <td>@Student.Email</td>
                <td></td>
                <td></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
    </tfoot>
</table>
</div>
</section> 